@model InventoryManagement.Web.Models.Inventory.CartonInventory

@{
    ViewBag.Title = "Sell Carton";
}

<h2>Sell Carton</h2>

@using (Html.BeginForm("SellCarton", "Inventory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.BootstrapLabel("CartonList")
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.CartonId, @Model.CartonList, new { @class = "form-control" })
            @Html.ValidationMessage("CartonList")
        </div>
    </div>

    <div class="form-group">
        @Html.BootstrapLabel("NumberOfCartons")
        <div class="col-md-10">
            @Html.Editor("NumberOfCartons")
            @Html.ValidationMessage("NumberOfCartons")
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sell" class="btn btn-default" />
        </div>
    </div>
}
