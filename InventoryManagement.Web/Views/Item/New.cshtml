@model InventoryManagement.Web.Models.Item.NewItemForm

@{
    ViewBag.Title = "New Item";
}

<h2>New Item</h2>
@using (Html.BeginForm("New", "Item", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Item" class="btn btn-default" />
        </div>
    </div>
}