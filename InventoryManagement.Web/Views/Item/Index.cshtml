@model InventoryManagement.Web.Models.Item.ItemSummaryViewModel[]

@{
    ViewBag.Title = "Item List";
}

<br/>
<div>@Html.ActionLink("Setup Item", "New", "Item")</div>

<h3>Item List</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Item</th>
            <th>Code</th>
            <th>Price</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(@item.ItemName, "View", "Issue", routeValues: new { id = @item.ItemId}, htmlAttributes: null)</td>
                <td>@item.ItemCode</td>
                <td>@item.Price</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
    