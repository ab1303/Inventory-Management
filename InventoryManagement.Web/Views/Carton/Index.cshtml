@model InventoryManagement.Web.Models.Carton.CartonSummaryViewModel[]

@{
    ViewBag.Title = "Carton List";
}


<br />
<br />
<br />
<div>@Html.ActionLink("Setup Carton", "New", "Carton")</div>


<h2>Carton List</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Carton Id</th>
            <th>Item Name</th>
            <th>Number of Pieces</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CartonId</td>
                <td>@item.ItemName</td>
                <td>@item.NumberOfPieces</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>